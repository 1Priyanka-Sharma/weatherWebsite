    <!-- NEWS API-->
    <section class="sub-category-container">
        <div class="sub-category-name" id="news"> <strong> TRENDING NEWS</strong></div>

        <div class="news-list">

            {{#each articles as | val key| }}
            <div class=" card text-white news-col">
                <div class="news-container">
                    <img src={{val.urlToImage}} class="card-img news-image" alt="...">
                </div>
                <div class="card-img-overlay card-content">
                    <p class="card-text">
                    <h6>{{val.title}}</h6>
                    </p>
                    <p class="news-link"> <a href={{val.url}} target="_blank"> Read more</a> </p>
