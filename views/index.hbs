    <!-- My Stylesheet -->
    <link rel="stylesheet" href="/style/weather.css">

    <title>Weather Time</title>
</head>

<body>
    <!-- Header -->
    <div class=" sticky-top">

        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark ">
            <div class="container-fluid">

                <!-- Logo -->
                <a class="navbar-brand" href="#"> <img src="/images/logo.png" alt=""> </a>

                <!--Hamburger icon -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Menu -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav nav-list">
                        <li class="nav-item">
                            <a class="nav-link active" href="#">Forecast</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#weekly-forecast">Weekly Forecast</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="#news">News</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- Search Box Container -->
        <nav class="navbar navbar-dark bg-dark  ">
            <div class="container-fluid background-change">

                <!-- Input + Search Box (location+searchButton)-->
                <div class="d-flex">
                    <input class="form-control me-2 outline" id='location' name="getcity" type="search"
                        placeholder="Enter your location" aria-label="Search">
                    <button class="btn btn-outline-light" id="searchButton" type="submit">Search</button>
                </div>

                <!-- C/F Button (highlight)-->
                <a class="navbar-brand">
                    <button type="button" class="btn btn-dark highlight" id="temp-c">&deg;C</button>
                    <button type="button" class="btn btn-dark" id="temp-f">&deg;F</button>
                </a>
            </div>
        </nav>
    </div>

    <!-- Weather Data(color-container) -->
    <section class="container  mt-3  text-light color-container">

        <!-- Location -->
        <div class="row p-3">
            <div class="col  p-2 d-flex flex-column">
                <span> <strong> CURRENT WEATHER INFO</strong> </span>
                <span id="place"> <strong> Goa,IN</strong> </span>
                <span id='timeW'> 8:29 PM </span>
                <span id='dateW'> Monday, 24 May</span>
            </div>
        </div>

        <!-- ICON Row(responsive-row) -->
        <div class="row p-4 responsive-row">
            <div class="col-2 align-self-start " id='main-icon'>
                <img src="https://openweathermap.org/img/wn/01d@2x.png" alt="">
            </div>
            <div class="col-2 align-self-center">
                <h1 id="temp"> 19&deg;</h1>
            </div>
            <div class="col-6 d-flex flex-column align-self-center ">
                <span id="description"> <strong>Smoke </strong> </span>
                <span id="feel-like"> FEELS Like 20&deg; </span>
            </div>
        </div>

        <!-- Maximum/Minimum Temp. -->
        <div class="row p-4 ">
            <div class="col max/min">
                The maximum will be 20&deg;. The minimum will be 10&deg;.
            </div>
        </div>

        <!--Weather  Parameters(attributes-resp)  -->
        <div class="row p-3  align-items-end attributes-resp">
            <div class="col  d-flex flex-column">
                <span> AIR QUALITY </span>
                <span id="airq"> 1 Good </span>
            </div>
            <div class="col d-flex flex-column">
                <span> WIND</span>
                <span id="wind"> 3 Km/h</span>
            </div>
            <div class="col d-flex flex-column">
                <span> HUMIDITY</span>
                <span id="humidity"> 90%</span>
            </div>
            <div class="col d-flex flex-column">
                <span>VISIBILITY </span>
                <span id="visibility"> 13 km/h</span>
            </div>
            <div class="col d-flex flex-column">
                <span>PRESSURE</span>
                <span id="pressure"> 1020 mb</span>
            </div>
            <div class="col d-flex flex-column">
                <span>DEW POINT</span>
                <span id="dew-point">6&deg;</span>
            </div>
        </div>
    </section>

    <!-- Scroll-Up Button -->
    <i id="scroll-top" class="fas fa-chevron-circle-up"></i>

    <!-- Weekly-forecast -->
    <section class="sub-category-container">
        <div class="sub-category-name" id="weekly-forecast"> <strong> 7 DAYS FORECAST</strong></div>
        <div class="week-list" id="weekly-set">

            <!-- Today Weather Block(days-container->size,large-width)  -->
